<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp" xmlns:android="http://schemas.android.com/apk/res/android">
        
    <EditText
        android:id="@+id/et_file_name"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:inputType="text|textCapWords|textNoSuggestions"
        android:maxLines="1" />

    <ImageView
        android:id="@+id/iv_file_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:padding="10dp"
        android:src="@drawable/ic_launcher"
        android:layout_below="@+id/et_file_name" />

    <CheckBox
        android:id="@+id/cb_delete"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:text="@string/_dialog_file_delete"
        android:layout_toRightOf="@+id/iv_file_icon"
        android:layout_below="@+id/et_file_name" />

</RelativeLayout>